@{
    ViewData["Title"] = "About";
}
<link rel="stylesheet" href="/css/About.css">

<section id="about" class="about section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 align-items-center justify-content-between">
            <div class="col-xl-5" data-aos="fade-up" data-aos-delay="200">
                <span class="about-meta">MORE ABOUT US</span>
                <h2 class="about-title">Abbott Pharma</h2>
                <p class="about-description">
                    With years of experience in manufacturing high-quality Capsule Filling, Tablet Compression, and Liquid Filling Machines, We ensure excellence, efficiency, and global compliance in pharmaceutical production.
                </p>

                <div class="row feature-list-wrapper">
                    <div class="col-md-6">
                        <ul class="feature-list">
                            <li><i class="bi bi-check-circle-fill"></i> GMP & ISO Certified</li>
                            <li><i class="bi bi-check-circle-fill"></i> Advanced Engineering Solutions</li>
                            <li><i class="bi bi-check-circle-fill"></i> High-Speed Production Machines</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="feature-list">
                            <li><i class="bi bi-check-circle-fill"></i> Customizable Equipment</li>
                            <li><i class="bi bi-check-circle-fill"></i> Reliable & Durable Machinery</li>
                            <li><i class="bi bi-check-circle-fill"></i> Global Clientele</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xl-6" data-aos="fade-up" data-aos-delay="300">
                <div class="image-wrapper">
                    <div class="images position-relative" data-aos="zoom-out" data-aos-delay="400">
                        <img src="/Images/About1.jpg" alt="About Image" class="img-fluid main-image rounded-4">
                        <img src="/Images/About2.jpg" alt="About Image" class="img-fluid small-image rounded-4">
                    </div>
                    <div class="experience-badge floating">
                        <h3>15+ <span>Years</span></h3>
                        <p>Of expertise in pharmaceutical machinery</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="mission" class="section bg-light py-5">
    <div class="container text-center" data-aos="fade-up">
        <h2 class="section-title text-primary">Our Mission & Vision</h2>
        <p class="section-description text-muted">
            We strive to revolutionize the pharmaceutical industry by providing cutting-edge machinery for capsule filling, tablet compression, and liquid filling.
        </p>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="mission-box p-4 shadow-lg rounded bg-white border border-primary">
                    <h3 class="text-secondary">Our Mission</h3>
                    <p>Empowering pharmaceutical companies with high-performance manufacturing solutions.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="vision-box p-4 shadow-lg rounded bg-white border border-primary">
                    <h3 class="text-secondary">Our Vision</h3>
                    <p>To become the global leader in pharmaceutical machinery innovation.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="partners" class="section py-5">
    <div class="container text-center" data-aos="fade-up">
        <h2 class="section-title text-primary">Our Partners</h2>
        <p class="section-description text-muted">
            We collaborate with top pharmaceutical brands worldwide to ensure the highest quality standards.
        </p>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="partner-logo">
                    <img src="/Images/partner1.png" class="img-fluid" alt="Partner 1">
                </div>
            </div>
            <div class="col-md-3">
                <div class="partner-logo">
                    <img src="/Images/partner2.png" class="img-fluid" alt="Partner 2">
                </div>
            </div>
            <div class="col-md-3">
                <div class="partner-logo">
                    <img src="/Images/partner3.png" class="img-fluid" alt="Partner 3">
                </div>
            </div>
            <div class="col-md-3">
                <div class="partner-logo">
                    <img src="/Images/partner4.png" class="img-fluid" alt="Partner 4">
                </div>
            </div>
        </div>
    </div>
</section>

<section id="testimonials" class="section bg-light py-5">
    <div class="container text-center" data-aos="fade-up">
        <h2 class="section-title text-primary">What Our Clients Say</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="testimonial p-4 shadow-lg rounded bg-white border border-primary">
                    <p class="text-muted">
                        "Outstanding pharmaceutical machinery! Their equipment is reliable, durable, and high-quality."
                    </p>
                    <h4 class="text-secondary">- Heisenberg</h4>
                </div>
            </div>
            <div class="col-md-6">
                <div class="testimonial p-4 shadow-lg rounded bg-white border border-primary">
                    <p class="text-muted">
                        "Their machines have significantly improved our production efficiency. Highly recommended!"
                    </p>
                    <h4 class="text-secondary">- Gustavo Fring</h4>
                </div>
            </div>
        </div>
    </div>
</section>
