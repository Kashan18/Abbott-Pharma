@model Abbott_Pharma.Models.Contact // Model ko bind karna zaroori hai
@{
    ViewData["Title"] = "Contact";
}
 <link href="~/css/contact.css" rel="stylesheet" asp-append-version="true" /> 

<div class="main_d">
<section id="contact" class="contact section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row g-4 g-lg-5">
            <div class="col-lg-5">
                <div class="info-box" data-aos="fade-up" data-aos-delay="200">
                    <h3>Abbott Pharma</h3>
                    <p>Have a question about our pharmaceutical machinery? Get in touch with our experts for inquiries, support, or partnerships.</p>

                    <div class="info-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="icon-box"><i class="bi bi-geo-alt"></i></div>
                        <div class="content">
                            <h4>Our Headquarters</h4>
                            <p>Abbott Pharma Industries</p>
                            <p>456 Pharma Tech Park, Suite 21</p>
                            <p>New Jersey, USA - 07001</p>
                        </div>
                    </div>

                    <div class="info-item" data-aos="fade-up" data-aos-delay="400">
                        <div class="icon-box"><i class="bi bi-telephone"></i></div>
                        <div class="content">
                            <h4>Customer Support</h4>
                            <p>+1 (800) 123-4567</p>
                            <p>+1 (732) 987-6543</p>
                        </div>
                    </div>

                    <div class="info-item" data-aos="fade-up" data-aos-delay="500">
                        <div class="icon-box"><i class="bi bi-envelope"></i></div>
                        <div class="content">
                            <h4>Email Us</h4>
                            <p>support@abbottpharma.com</p>
                            <p>sales@abbottpharma.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="contact-form" data-aos="fade-up" data-aos-delay="300">
                    <h3>Get In Touch</h3>
                    <p>Fill out the form below, and our team will get back to you as soon as possible.</p>


                    <form asp-action="SubmitForm" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                        <div class="row gy-4">

                            <div class="col-md-6">
                                <input asp-for="Name" class="form-control" placeholder="Your Name"  />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <input asp-for="Email" class="form-control" placeholder="Your Email"  />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <input asp-for="Subject" class="form-control" placeholder="Subject"  />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Your Message" ></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
</div>



@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '@TempData["SuccessMessage"]',
            timer: 3000,
            showConfirmButton: false
        });
    </script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '@TempData["ErrorMessage"]',
            timer: 3000,
            showConfirmButton: false
        });
    </script>
}
