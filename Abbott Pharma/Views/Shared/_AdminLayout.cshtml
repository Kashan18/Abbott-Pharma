<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <link rel="stylesheet" href="/css/Admin.css"/>

    <link rel="shortcut icon" type="image/png" href="~/images/logo.jpg" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <div class="sidebar">
        <div>
            <h2>Admin Panel</h2>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Main" asp-action="Admin">Quotes</a>
                    <hr class="nav-divider">
                </li>
                

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Main" asp-action="Admin_Job">Job Requests</a>
                    <hr class="nav-divider">
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Main" asp-action="Admin_Users">Users</a>
                    <hr class="nav-divider">
                </li>
                

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" asp-controller="Main" asp-action="Admin_Capsules" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Products
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                        <li><a class="dropdown-item" asp-controller="Main" asp-action="Admin_Capsules">Capsule Filling</a></li>
                        <li><a class="dropdown-item" asp-controller="Main" asp-action="Admin_Tablet">Tablet Compressing</a></li>
                        <li><a class="dropdown-item" asp-controller="Main" asp-action="Admin_Liquid">Liquid Filling</a></li>
                    </ul>
                    <hr class="nav-divider">
                </li>
            </ul>
        </div>
        <a asp-controller="Main" asp-action="Logout" class="logout-btn">🚪 Logout</a>
    </div>


    <div>
        @RenderBody()
    </div>
</body>
</html>
